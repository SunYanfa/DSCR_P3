<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#5DC1B9"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="@string/cuenta"
        android:fontFamily="serif"
        android:paddingLeft="80px"
        android:textColor="@color/white"
        android:background="#009d71"
        />

    <EditText
        android:id="@+id/user_name_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/usuario"
        android:fontFamily="cursive"
        android:layout_marginHorizontal="30px"
        android:layout_marginTop="50px"
        />
    <EditText
        android:id="@+id/password_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contraseÃ±a"
        android:fontFamily="cursive"
        android:inputType="textPassword"
        android:layout_marginHorizontal="30px"
        />

    <Button
        android:id="@+id/boton_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_sesion"
        android:layout_margin="30px"
        android:backgroundTint="#009d71"
        />



</LinearLayout>
